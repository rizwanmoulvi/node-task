{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/tasks/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/tasks",
      "dest": "/api/index.js"
    },
    {
      "src": "/styles.css",
      "dest": "/public/styles.css"
    },
    {
      "src": "/app.js",
      "dest": "/public/app.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
